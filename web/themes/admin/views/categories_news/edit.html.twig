{% extends '@admin/admin.html.twig' %}

{% block body %}

<div class="page-header">
	<h1>
		Form Elements
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			{{ title }}
		</small>
	</h1>
</div><!-- /.page-header -->

<div class="row">
	<div class="col-xs-10">
		<!-- PAGE CONTENT BEGINS -->
		<!--<form class="form-horizontal" role="form">-->
		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
			{% if form_errors %}
            <ul>
                <li>{{ form_errors }}</li>
            </ul>
            {% endif %}

			<div class="form-group">
				{{ form_label(form.title, form.title, {'label_attr': {'class': 'col-sm-3 control-label no-padding-right','role': 'form-field-1'}}) }}

				<div class="col-sm-7">
					{{ form_widget(form.title, {'attr': {'class': 'col-xs-10 col-sm-5','placeholder': 'Value'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.status, form.status, {'label_attr': {'class': 'col-sm-3 control-label no-padding-right','role': 'form-field-1'}}) }}

				<div class="col-sm-2">
					{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="clearfix form-actions">
				<div class="col-md-offset-3 col-md-9">

					{{ form_widget(form.send, {'attr': {'class': 'btn btn-info'}}) }}

					&nbsp; &nbsp; &nbsp;
					<a href="{{ path('admincp_categories_news_page') }}" class="btn" type="reset">
						<i class="ace-icon fa fa-undo bigger-110"></i>
						Back
					</a>
				</div>
			</div>

		{{ form_end(form) }}

		
		</div><!-- PAGE CONTENT ENDS -->
	</div><!-- /.col -->
</div><!-- /.row -->

{% endblock %}


